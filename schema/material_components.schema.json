{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Material Components Catalog",
  "type": "object",
  "additionalProperties": false,
  "required": ["schemaVersion", "generatedAt", "source", "components"],
  "properties": {
    "schemaVersion": {
      "type": "string"
    },
    "generatedAt": {
      "type": "string",
      "description": "ISO date string for when the catalog was generated."
    },
    "source": {
      "type": "string",
      "description": "Source URL for the catalog data."
    },
    "components": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["id", "name", "category", "summary", "docUrl", "kind"],
        "properties": {
          "id": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "category": {
            "type": "string"
          },
          "summary": {
            "type": "string"
          },
          "docUrl": {
            "type": "string"
          },
          "kind": {
            "type": "string"
          }
        }
      }
    }
  }
}
